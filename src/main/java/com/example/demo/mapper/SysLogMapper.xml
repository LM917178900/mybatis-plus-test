<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.SysLogMapper">


    <resultMap id="logMap" type="com.example.demo.model.SysLog" autoMapping="true">
        <!-- column：主键在数据库中的列名 property：主键在pojo中的属性名 -->
        <id property="id" jdbcType="INTEGER" column="id"/>
        <result column="visitor" jdbcType="VARCHAR" property="visitor"/>
        <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate"/>
        <result column="level1_menu" jdbcType="VARCHAR" property="level1Menu"/>
        <result column="level2_menu" jdbcType="VARCHAR" property="level2Menu"/>
        <result column="level3_menu" jdbcType="VARCHAR" property="level3Menu"/>
        <result column="message" jdbcType="VARCHAR" property="message"/>
        <result column="api" jdbcType="VARCHAR" property="api"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="log_data" jdbcType="JAVA_OBJECT" property="logData"
                typeHandler="com.example.demo.mybatis.JsonTypeHandler"
                javaType="Object"/>
    </resultMap>
    <parameterMap id="loggMap" type="com.example.demo.model.SysLog">
        <!-- column：主键在数据库中的列名 property：主键在pojo中的属性名 -->
        <parameter property="id" jdbcType="INTEGER" resultMap="logMap"/>
        <parameter jdbcType="VARCHAR" property="visitor" resultMap="logMap"/>
        <parameter jdbcType="TIMESTAMP" property="gmtCreate" resultMap="logMap"/>
        <parameter jdbcType="VARCHAR" property="level1Menu" resultMap="logMap"/>
        <parameter jdbcType="VARCHAR" property="level2Menu" resultMap="logMap"/>
        <parameter jdbcType="VARCHAR" property="level3Menu" resultMap="logMap"/>
        <parameter jdbcType="VARCHAR" property="message" resultMap="logMap"/>
        <parameter jdbcType="VARCHAR" property="api" resultMap="logMap"/>
        <parameter jdbcType="INTEGER" property="status" resultMap="logMap"/>
        <parameter jdbcType="JAVA_OBJECT" property="logData" resultMap="logMap"/>
    </parameterMap>
    <select id="getById" resultMap="logMap">
        SELECT * FROM sys_log WHERE id = #{id};
    </select>

    <insert id="batchInsert">
        INSERT INTO sys_log (visitor, gmt_create,
        level1_menu, level2_menu, level3_menu,
        message, api, status,log_data)
        VALUES
        <foreach collection="list" item="record" separator=",">
            (#{record.visitor,jdbcType=VARCHAR}, #{record.gmtCreate,jdbcType=TIMESTAMP},
            #{record.level1Menu,jdbcType=VARCHAR}, #{record.level2Menu,jdbcType=VARCHAR},
            #{record.level3Menu,jdbcType=VARCHAR},
            #{record.message,jdbcType=VARCHAR}, #{record.api,jdbcType=VARCHAR}, #{record.status,jdbcType=SMALLINT},
            <if test="record.logData == null">null</if>
            <if test="record.logData != null">(#{record.logData,jdbcType=VARCHAR})::jsonb </if>
            )
        </foreach>
    </insert>

</mapper>
